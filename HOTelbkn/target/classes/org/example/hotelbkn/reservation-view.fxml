<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.hotelbkn.ReservationController"
            style="-fx-background-color: linear-gradient(to bottom, #f0f8ff, #e6f7ff);">

  <left>
    <VBox spacing="10.0" prefWidth="200.0"
          style="-fx-background-color: #f4f4f4; -fx-border-color: #4a90e2; -fx-border-width: 0 2 0 0;"
          BorderPane.alignment="CENTER">
      <children>
        <Label text="Edit bookings" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Label text="Name:"/>
        <TextField fx:id="guestNameField" promptText="Billie Eilish"/>
        <Label text="Room:"/>
        <TextField fx:id="roomNumberField" promptText="19"/>
        <Label text="Phone number:"/>
        <TextField fx:id="contactNumberField" promptText="+996-xxx-xxx-xxx"/>
        <Label text="Check-in date:"/>
        <DatePicker fx:id="checkInDatePicker"/>
        <Label text="Check-out date:"/>
        <DatePicker fx:id="checkOutDatePicker"/>

        <HBox alignment="CENTER" spacing="10.0">
          <children>
            <Button text="Book" onAction="#handleReserveButton"
                    style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="Delete" onAction="#handleDeleteButton"
                    style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="Update" onAction="#handleLoadAll"
                    style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-weight: bold;"/>
          </children>
        </HBox>
      </children>
      <padding><Insets top="10" left="10" right="10" bottom="10"/></padding>
    </VBox>
  </left>

  <center>
    <AnchorPane BorderPane.alignment="CENTER">
      <children>
        <Label layoutX="14.0" layoutY="14.0" text="Booking list"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <TableView fx:id="reservationTable" layoutX="14.0" layoutY="40.0"
                   prefHeight="546.0" prefWidth="650.0"
                   style="-fx-background-color: #ffffff; -fx-border-color: #4a90e2;">
          <columns>
            <TableColumn fx:id="idColumn" prefWidth="50.0" text="â„–"/>
            <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Name"/>
            <TableColumn fx:id="roomColumn" prefWidth="100.0" text="Room"/>
            <TableColumn fx:id="contactColumn" prefWidth="200.0" text="Contact"/>
            <TableColumn fx:id="periodColumn" prefWidth="200.0" text="Period"/>
          </columns>
        </TableView>
      </children>
    </AnchorPane>
  </center>
</BorderPane>
